{
  "name": "tlamedia/gtm-kit",
  "description": "Development files for the GTM Kit",
  "keywords": [
    "wordpress",
    "gtm"
  ],
  "homepage": "https://gtmkit.com/",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "TLA Media",
      "email": "kontakt@tlamedia.dk",
      "homepage": "https://www.tlamedia.dk"
    }
  ],
  "type": "wordpress-plugin",
  "require": {
    "php": "^7.2 || ^8.0"
  },
  "require-dev": {
    "phpstan/extension-installer": "^1.3.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^4|^5|^6|^7|^8|^9",
    "szepeviktor/phpstan-wordpress": "^1.3.0",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpstan/phpstan-deprecation-rules": "^1.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "TLA_Media\\GTM_Kit\\": "src/"
    }
  },
  "config": {
    "platform": {
      "php": "7.2.0"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "phpstan": "phpstan analyze --ansi",
    "no-dev": "composer install --no-dev"
  }
}
